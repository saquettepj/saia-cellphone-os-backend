{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "dotenv -- .env.dev -- tsx watch src/server.ts",
    "erd": "pnpx prisma generate",
    "migrate:dev": "dotenv -- .env.dev -- pnpx prisma migrate deploy",
    "migrate:test:create": "dotenv -- .env.dev -- pnpx prisma migrate dev --name",
    "migrate:dev:create": "dotenv -- .env.dev -- pnpx prisma migrate dev --name",
    "migrate:dev:status": "dotenv -- .env.dev -- pnpx prisma migrate status",
    "migrate:dev:reset": "dotenv -- .env.dev -- pnpx prisma migrate reset",
    "migrate:dev:rollback": "dotenv -- .env.dev -- pnpx prisma migrate resolve --rolled-back",
    "migrate:deploy": "pnpx prisma migrate deploy",
    "start": "node build/server.js",
    "build": "tsup src --out-dir build",
    "lint": "eslint src ---xt .ts",
    "fix": "eslint --fix src/**/*.ts",
    "test": "dotenv -- .env.test vitest run --dir src/test/unit",
    "test:watch": "dotenv -- .env.test vitest --dir src/test/unit",
    "test:ui": "vitest --ui --api 9527",
    "test:e2e": "dotenv -- .env.test vitest run --dir src/test/e2e",
    "test:e2e:watch": "dotenv -- .env.test vitest --dir src/test/e2e"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
