{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],

    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}